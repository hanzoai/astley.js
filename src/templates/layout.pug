  body
    //(style='overflow:hidden')
    // Header

    input#show-mobile-menu(type='checkbox')

    block preheader
    block header
      - {
      -   let item = data.header
          header
            include header.pug
      - }


    main
      block content
        - for(var i in data.main) {
          - let item = data.main[i]
          if i == 0
            include hero.pug
        - }

    block footer
      - {
      -   let item = data.footer || data.header
          footer
            include footer.pug
      - }

